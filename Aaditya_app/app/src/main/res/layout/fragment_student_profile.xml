<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dibbi.aaditya_app.StudentProfileFragment"
    tools:showIn="@layout/activity_student_profile">


    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/android" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Divya Nagar"
        android:id="@+id/fullName"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/profile_pic"
        android:layout_toEndOf="@+id/profile_pic"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="divn2661@gmail.com"
        android:id="@+id/PEmial"
        android:textSize="20dp"
        android:layout_below="@+id/fullName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/fullName"
        android:layout_alignStart="@+id/fullName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="8302073904"
        android:id="@+id/PContact"
        android:textSize="20dp"
        android:layout_below="@+id/PEmial"
        android:layout_alignLeft="@+id/PEmial"
        android:layout_alignStart="@+id/PEmial"
        android:layout_alignRight="@+id/PEmial"
        android:layout_alignEnd="@+id/PEmial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="IIT Jodhpur"
        android:textSize="20dp"
        android:id="@+id/College"
        android:layout_below="@+id/PContact"
        android:layout_alignLeft="@+id/PContact"
        android:layout_alignStart="@+id/PContact"
        android:layout_alignBottom="@+id/profile_pic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/profile_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="2-pha-32-33 teachers colony keshavpura kota"
        android:textSize="20dp"
        android:id="@+id/Paddress"
        android:layout_toRightOf="@+id/profile_pic"
        android:layout_alignRight="@+id/College"
        android:layout_alignEnd="@+id/College"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/Paddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="07/01/1995"
        android:id="@+id/Pdob"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/Paddress"
        android:layout_alignStart="@+id/Paddress"
        android:layout_alignRight="@+id/Paddress"
        android:layout_alignEnd="@+id/Paddress"
        android:layout_below="@+id/Paddress"
        android:layout_alignBottom="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batch"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batch Number"
        android:textSize="20dp"
        android:id="@+id/Pbatch"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/Pdob"
        android:layout_alignStart="@+id/Pdob"
        android:layout_alignRight="@+id/Pdob"
        android:layout_alignEnd="@+id/Pdob" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        android:padding="2dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp">

        <Button
            android:id="@+id/facebook_link"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Facebook"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="#3b5998" />

        <Button
            android:id="@+id/twitter_link"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#1dcaff"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="Twitter" />

    </LinearLayout>

</RelativeLayout>
